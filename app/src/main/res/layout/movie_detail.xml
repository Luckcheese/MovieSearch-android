<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/view_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                android:text="@string/movie_details_plot_label"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="The movie plot"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separatorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_margin"
            android:orientation="vertical">

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_actors"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/directors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_directors"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/writers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_writers"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/releaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_release_date"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_duration"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_genre"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/metascore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_metascore"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/awards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                app:infoImage="@drawable/ic_awards"/>

            <com.luckcheese.moviesearch.views.MovieInfoRow
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:infoImage="@drawable/ic_country"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
